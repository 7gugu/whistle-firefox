{
    "manifest_version": 3,
    "name": "Whistle-Switcher",
    "description": "一款帮助开发者快捷切换Whistle代理规则的Firefox拓展插件。",
    "author": "7gugu",
    "version": "1.0.4",
    "action": {
        "default_icon": {
            "16": "unactive@16.png",
            "48": "unactive@48.png",
            "128": "unactive@128.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "active@16.png",
        "48": "active@48.png",
        "128": "active@128.png"
    },
    "background": {
        "scripts": ["js/backgroundPage.js"]
    },
    "host_permissions": ["*://*/*"],
    "incognito": "spanning",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "proxy",
        "storage",
        "notifications",
        "contextMenus"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "whistleSwicher@7gugu.com",
            "strict_min_version": "91.1.0"
        }
    }
}
